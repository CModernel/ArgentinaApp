<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.ui.OrderFragment.view.FragmentOrder">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_background">

        <LinearLayout
            android:id="@+id/fo_ll_total_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:elevation="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/grid_total_amount">

            <include
                android:id="@+id/fo_include_total_grid"
                layout="@layout/layout_total_grid" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/fo_btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/fo_txt_confirm_order"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="4dp"
            android:fontFamily="sans-serif-black"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:elevation="8dp"
            android:background="@drawable/custom_button_1" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>